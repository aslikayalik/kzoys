@model Holiday

@{
    ViewData["Title"] = "Edit";
}

<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2>Resmi Tatil Düzenleme Sayfası</h2>
        <hr />
    </div>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
    
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                @Html.LabelFor(model => model.HolidayName, "Resmi Tatil Adı")
                @Html.TextBoxFor(model => model.HolidayName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HolidayName)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.HolidayStartDate, "Resmi Tatil Başlangıç Tarihi")
                @Html.TextBoxFor(model => model.HolidayStartDate, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HolidayStartDate)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.HolidayEndDate, "Resmi Tatil Bitiş Tarihi")
                @Html.TextBoxFor(model => model.HolidayEndDate, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HolidayEndDate)
            </div>
            <br />
            <button type="submit" class="btn btn-primary" style="width:150px">Düzenle</button>
            <a asp-controller="Holiday" asp-action="Index" class="btn btn-secondary" style="width:auto">
                Resmi Tatil Listesine Dön
            </a>


        </form>
    </div>
</div>
</div>


